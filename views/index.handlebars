<div class="container">

	<div class="row">
		<img src="assets/images/news.png" class="background">
	</div>

	<hr>

	{{#each this}}
	{{#if this.title}}
	<div class="row articlerow">
		<div class="col-2.5">
			<img class="articleimages" src="{{this.image}}">
		</div>
		<div class="col">
			<div id="articletext">
				<h4>{{this.title}}</h4>
				<p>{{this.summary}}</p>
				<a href="{{this.link}}" target="_blank">Link to article (opens in new tab)</a>
			</div>
		</div>
		<div class="col-2 align-self-end text-center">
			<button data-id="{{this._id}}" class="btn save btn-success" data-toggle="modal" data-target="#savearticlemodal">
				Save Article
			</button>
		</div>
	</div>

	<hr>
	{{/if}}
	{{/each}}

</div>

<div class="modal fade" id="savearticlemodal" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Article successfully saved!</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-footer">
				<a href="/saved"><button href="/saved" type="button" class="btn btn-primary">View saved articles</button></a>
				<button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>

